# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)




POST         /signup                                             controllers.KessengerController.signup
POST         /signin                                             controllers.KessengerController.signin
GET          /logout                                             controllers.KessengerController.logout
GET          /user/:userId                                       controllers.KessengerController.user(userId: java.util.UUID)
PUT          /user/:userId/changeSettings                        controllers.KessengerController.changeSettings(userId: java.util.UUID)
PUT          /user/:userId/changeLogin                           controllers.KessengerController.changeMyLogin(userId: java.util.UUID)
PUT          /user/:userId/changePassword                        controllers.KessengerController.changePassword(userId: java.util.UUID)
GET          /user/:userId/searchUser                            controllers.KessengerController.searchUser(userId: java.util.UUID, u: String)

# chats
GET          /user/:userId/chats                                 controllers.KessengerController.getChats(userId: java.util.UUID)
GET          /user/:userId/chats/:chatId                         controllers.KessengerController.getChatUsers(userId: java.util.UUID, chatId: String)
DELETE       /user/:userId/chats/:chatId                         controllers.KessengerController.leaveChat(userId: java.util.UUID, chatId: String)
PUT          /user/:userId/chats/:chatId/newChatName             controllers.KessengerController.updateChatName(userId: java.util.UUID, chatId: String)
POST         /user/:userId/chats/:chatId/addNewUsers             controllers.KessengerController.addUsersToChat(userId: java.util.UUID, chatId: String)
POST         /user/:userId/newChat                               controllers.KessengerController.newChat(userId: java.util.UUID)

####   WEBSOCKET
